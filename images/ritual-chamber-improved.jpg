<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 400" width="600" height="400">
  <defs>
    <style>
      .chamber-bg { fill: #1a1a1a; }
      .pillar { fill: #d4d4d4; }
      .pillar-cap { fill: #ffd700; }
      .altar { fill: #8b4513; }
      .altar-top { fill: #ffd700; }
      .floor-light { fill: #f5f5f5; }
      .floor-dark { fill: #2c2c2c; }
      .candle-flame { fill: #ffff00; opacity: 0.8; }
      .symbol { fill: #ffd700; }
      .text-gold { fill: #ffd700; }
      .text-white { fill: white; }
      .book { fill: #8b0000; }
      .book-pages { fill: #f5f5f5; }
    </style>
  </defs>
  
  <!-- Chamber background -->
  <rect width="600" height="400" class="chamber-bg"/>
  
  <!-- Checkered floor pattern -->
  <g transform="translate(0,300)">
    <!-- Light squares -->
    <rect x="0" y="0" width="40" height="40" class="floor-light"/>
    <rect x="80" y="0" width="40" height="40" class="floor-light"/>
    <rect x="160" y="0" width="40" height="40" class="floor-light"/>
    <rect x="240" y="0" width="40" height="40" class="floor-light"/>
    <rect x="320" y="0" width="40" height="40" class="floor-light"/>
    <rect x="400" y="0" width="40" height="40" class="floor-light"/>
    <rect x="480" y="0" width="40" height="40" class="floor-light"/>
    <rect x="560" y="0" width="40" height="40" class="floor-light"/>
    
    <rect x="40" y="40" width="40" height="40" class="floor-light"/>
    <rect x="120" y="40" width="40" height="40" class="floor-light"/>
    <rect x="200" y="40" width="40" height="40" class="floor-light"/>
    <rect x="280" y="40" width="40" height="40" class="floor-light"/>
    <rect x="360" y="40" width="40" height="40" class="floor-light"/>
    <rect x="440" y="40" width="40" height="40" class="floor-light"/>
    <rect x="520" y="40" width="40" height="40" class="floor-light"/>
    
    <rect x="0" y="80" width="40" height="20" class="floor-light"/>
    <rect x="80" y="80" width="40" height="20" class="floor-light"/>
    <rect x="160" y="80" width="40" height="20" class="floor-light"/>
    <rect x="240" y="80" width="40" height="20" class="floor-light"/>
    <rect x="320" y="80" width="40" height="20" class="floor-light"/>
    <rect x="400" y="80" width="40" height="20" class="floor-light"/>
    <rect x="480" y="80" width="40" height="20" class="floor-light"/>
    <rect x="560" y="80" width="40" height="20" class="floor-light"/>
  </g>
  
  <!-- Jachin and Boaz pillars -->
  <g transform="translate(80,80)">
    <!-- Jachin (left pillar) -->
    <rect x="0" y="0" width="25" height="180" class="pillar"/>
    <rect x="-5" y="-8" width="35" height="12" class="pillar-cap"/>
    <rect x="-5" y="180" width="35" height="12" class="pillar-cap"/>
    <text x="12.5" y="100" text-anchor="middle" font-family="serif" font-size="20" class="text-gold" font-weight="bold">J</text>
  </g>
  
  <g transform="translate(495,80)">
    <!-- Boaz (right pillar) -->
    <rect x="0" y="0" width="25" height="180" class="pillar"/>
    <rect x="-5" y="-8" width="35" height="12" class="pillar-cap"/>
    <rect x="-5" y="180" width="35" height="12" class="pillar-cap"/>
    <text x="12.5" y="100" text-anchor="middle" font-family="serif" font-size="20" class="text-gold" font-weight="bold">B</text>
  </g>
  
  <!-- Altar in center -->
  <g transform="translate(250,200)">
    <!-- Altar base -->
    <rect x="0" y="40" width="100" height="50" class="altar"/>
    
    <!-- Altar top -->
    <rect x="-10" y="35" width="120" height="8" class="altar-top"/>
    
    <!-- Sacred book -->
    <rect x="15" y="25" width="70" height="15" class="book"/>
    <rect x="20" y="20" width="60" height="3" class="book-pages"/>
    
    <!-- Compass and Square over the book -->
    <g transform="translate(50,30)">
      <!-- Compass -->
      <line x1="-12" y1="8" x2="0" y2="-8" stroke="#ffd700" stroke-width="2"/>
      <line x1="12" y1="8" x2="0" y2="-8" stroke="#ffd700" stroke-width="2"/>
      <circle cx="0" cy="-8" r="2" class="symbol"/>
      
      <!-- Square -->
      <rect x="-10" y="2" width="20" height="2" class="symbol"/>
      <rect x="-10" y="2" width="2" height="10" class="symbol"/>
    </g>
  </g>
  
  <!-- East wall with throne/chair -->
  <g transform="translate(220,70)">
    <!-- Master's chair -->
    <rect x="40" y="0" width="80" height="60" fill="#2c3e9e"/>
    <rect x="30" y="50" width="100" height="8" class="altar-top"/>
    
    <!-- All-Seeing Eye above -->
    <g transform="translate(80,20)">
      <polygon points="-15,0 0,-15 15,0" stroke="#ffd700" stroke-width="2" fill="none"/>
      <circle cx="0" cy="-5" r="6" class="symbol"/>
      <circle cx="0" cy="-5" r="2" class="chamber-bg"/>
    </g>
  </g>
  
  <!-- Degree numbers on walls -->
  <g transform="translate(40,120)">
    <text x="0" y="0" font-family="serif" font-size="24" class="text-gold">4°</text>
  </g>
  
  <g transform="translate(530,120)">
    <text x="0" y="0" font-family="serif" font-size="24" class="text-gold">14°</text>
  </g>
  
  <!-- Candles for atmosphere -->
  <g transform="translate(130,140)">
    <rect x="0" y="0" width="4" height="25" class="symbol"/>
    <ellipse cx="2" cy="-3" rx="4" ry="6" class="candle-flame"/>
  </g>
  
  <g transform="translate(466,140)">
    <rect x="0" y="0" width="4" height="25" class="symbol"/>
    <ellipse cx="2" cy="-3" rx="4" ry="6" class="candle-flame"/>
  </g>
  
  <!-- Scottish Rite symbols on the walls -->
  <g transform="translate(150,100)">
    <!-- Rose Croix symbol -->
    <circle cx="0" cy="0" r="12" fill="none" stroke="#ffd700" stroke-width="2"/>
    <rect x="-8" y="-2" width="16" height="4" class="symbol"/>
    <rect x="-2" y="-8" width="4" height="16" class="symbol"/>
  </g>
  
  <g transform="translate(450,100)">
    <!-- Double Eagle -->
    <circle cx="0" cy="0" r="12" fill="none" stroke="#ffd700" stroke-width="2"/>
    <text x="0" y="4" text-anchor="middle" font-family="serif" font-size="8" class="text-gold">32°</text>
  </g>
  
  <!-- Lodge of Perfection designation -->
  <g transform="translate(300,50)">
    <text x="0" y="0" text-anchor="middle" font-family="serif" font-size="16" class="text-gold">Lodge of Perfection</text>
    <text x="0" y="20" text-anchor="middle" font-family="serif" font-size="12" class="text-gold">Valley of Pittsfield</text>
  </g>
  
  <!-- Ambient lighting effects -->
  <circle cx="150" cy="120" r="30" fill="url(#candleGlow)" opacity="0.3"/>
  <circle cx="450" cy="120" r="30" fill="url(#candleGlow)" opacity="0.3"/>
  
  <defs>
    <radialGradient id="candleGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ffff00;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#ffff00;stop-opacity:0" />
    </radialGradient>
  </defs>
</svg>